<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F6F0"
    android:layout_marginTop="30dp"
    tools:context=".features.journal.presentation.write.JournalEditActivity">

    <!-- 상단 앱바 (제목, 뒤로가기 버튼) -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp"
        app:elevation="0dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#F8F6F0"
            app:title="일기 수정"
            app:titleTextColor="@color/text_primary"
            app:navigationIcon="@drawable/ic_arrow_back"/>
    </com.google.android.material.appbar.AppBarLayout>

    <!-- 일기 내용을 보여주고 수정할 Fragment가 들어갈 컨테이너 -->
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/edit_fragment_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/app_bar_layout"
        app:layout_constraintBottom_toTopOf="@id/button_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout="@layout/fragment_content_write"/>

    <!-- ▼▼▼▼▼ [핵심] 하단 버튼 레이아웃 수정 ▼▼▼▼▼ -->
    <LinearLayout
        android:id="@+id/button_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@color/bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 삭제 버튼 (Outlined 스타일) -->
        <Button
            android:id="@+id/btn_edit_delete"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="삭제"
            android:textSize="16sp"
            android:textColor="@color/emotion_angry_red"
            app:strokeColor="@color/emotion_angry_red"
            app:cornerRadius="12dp"/>

        <Space
            android:layout_width="12dp"
            android:layout_height="match_parent"/>

        <!-- 수정 버튼 (기존 스타일 유지) -->
        <Button
            android:id="@+id/btn_edit_save"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="2"
            android:text="수정"
            android:textSize="16sp"
            android:textColor="#F8F6F0"
            android:backgroundTint="@color/text_secondary"
            app:cornerRadius="12dp"/>
    </LinearLayout>
    <!-- ▲▲▲▲▲ 수정 완료 ▲▲▲▲▲ -->

</androidx.constraintlayout.widget.ConstraintLayout>
