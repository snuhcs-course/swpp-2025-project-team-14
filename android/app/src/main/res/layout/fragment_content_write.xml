<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <!-- 제목 -->
        <TextView
            android:id="@+id/label_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="제목"
            android:textColor="@color/text_secondary"
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <EditText
            android:id="@+id/et_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@null"
            android:hint="제목을 입력하세요"
            android:inputType="text"
            android:maxLines="1"
            android:textColor="@color/text_primary"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/label_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- 구분선 -->
        <View
            android:id="@+id/divider_title"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/text_secondary"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/et_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- 내용 -->
        <EditText
            android:id="@+id/et_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@null"
            android:gravity="top"
            android:hint="오늘의 이야기를 들려주세요."
            android:inputType="textMultiLine"
            android:minHeight="200dp"
            android:lineSpacingExtra="8dp"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/divider_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- 이미지 추가 영역 -->
        <FrameLayout
            android:id="@+id/layout_add_image"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minHeight="150dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/ic_book"
            android:padding="16dp"
            app:layout_constraintTop_toBottomOf="@id/et_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/tv_add_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이미지 추가"
                android:textColor="@color/text_secondary"
                android:textSize="16sp"
                android:drawablePadding="8dp"
                android:gravity="center"
                android:layout_gravity="center"
                app:drawableStartCompat="@drawable/ic_book"/>

            <!-- 이미지가 추가되면 이 ImageView를 보이게 처리 -->
            <ImageView
                android:id="@+id/iv_preview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:visibility="gone"
                tools:srcCompat="@tools:sample/backgrounds/scenic"/>

        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
