<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvLeftEmotion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="슬픔"
        android:textSize="15sp"
        android:textColor="#636779"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.example.mindlog.features.statistics.widget.TwoToneRatioBar
        android:id="@+id/bar"
        android:layout_width="0dp"
        android:layout_height="14dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvLeftEmotion" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvRightEmotion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="행복"
        android:textSize="15sp"
        android:textColor="#636779"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@id/tvLeftEmotion"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvLeftRatio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="30%"
        android:textSize="13sp"
        android:textColor="#8A8F9E"
        android:fontFamily="monospace"
        android:includeFontPadding="false"
        android:lines="1"
        android:ellipsize="end"
        app:layout_constraintStart_toStartOf="@id/bar"
        app:layout_constraintTop_toBottomOf="@id/bar"
        android:layout_marginTop="4dp"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvRightRatio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="70%"
        android:textSize="13sp"
        android:textColor="#8A8F9E"
        android:fontFamily="monospace"
        android:includeFontPadding="false"
        android:lines="1"
        android:ellipsize="end"
        app:layout_constraintEnd_toEndOf="@id/bar"
        app:layout_constraintTop_toBottomOf="@id/bar"
        android:layout_marginTop="4dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>