<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg">  <!-- 앱 배경 색상 -->

    <!-- 상단 우측: 건너뛰기 -->
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvSkip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:text="튜토리얼 건너뛰기"
        android:textSize="14sp"
        android:textColor="@color/text_secondary"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0" />

    <!-- 페이지 뷰페이저 -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vpTutorial"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/progressIndicator"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintDimensionRatio="9:19" />

    <!-- 하단 인디케이터 (점) -->
    <!-- 기존 TabLayout 삭제하고 이걸로 교체 -->
    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/progressIndicator"
        android:layout_width="0dp"
        android:layout_height="4dp"
        android:layout_marginHorizontal="24dp"
        app:layout_constraintTop_toBottomOf="@id/vpTutorial"
        app:layout_constraintBottom_toTopOf="@id/tvPageInfo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:trackThickness="4dp"
        app:indicatorColor="@color/primary"
        app:trackColor="@color/dot_unselected" />

    <!-- 하단 기능/페이지 정보 -->
    <TextView
        android:id="@+id/tvPageInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="홈 탭  1/3"
        android:textSize="14sp"
        android:textColor="@color/text_secondary"
        android:paddingTop="4dp"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/progressIndicator"
        app:layout_constraintBottom_toTopOf="@id/btnNext"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 하단 메인 버튼 -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnNext"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="32dp"
        android:text="다음"
        android:textAllCaps="false"
        android:textSize="16sp"
        app:cornerRadius="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>