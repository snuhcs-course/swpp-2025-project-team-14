<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:paddingTop="@dimen/space_m"
    tools:context=".MainActivity">

    <!-- ==================== 상단 헤더 바 ==================== -->
    <ImageButton
        android:id="@+id/btn_settings"
        android:layout_width="@dimen/touch_target"
        android:layout_height="@dimen/touch_target"
        android:layout_marginEnd="@dimen/screen_padding_h"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="설정"
        android:src="@drawable/ic_settings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

    <ImageButton
        android:id="@+id/btn_search"
        android:layout_width="@dimen/touch_target"
        android:layout_height="@dimen/touch_target"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="검색"
        android:src="@drawable/ic_search"
        app:layout_constraintEnd_toStartOf="@id/btn_settings"
        app:layout_constraintTop_toTopOf="@id/btn_settings"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/tv_header_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/screen_padding_h"
        android:layout_marginEnd="@dimen/space_m"
        android:maxLines="1"
        android:text="MindLog"
        android:textAppearance="@style/TextAppearance.Mindlog.Title"
        android:textColor="@color/text_primary"
        app:layout_constraintBottom_toBottomOf="@id/btn_settings"
        app:layout_constraintEnd_toStartOf="@id/btn_search"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/btn_settings"
        app:layout_constraintHorizontal_bias="0.0"/>

    <!-- ==================== 날짜 및 캘린더 뷰 ==================== -->
    <TextView
        android:id="@+id/tv_current_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/screen_padding_h"
        android:layout_marginTop="@dimen/space_l"
        android:drawablePadding="@dimen/space_xs"
        android:gravity="center_vertical"
        android:text="2025년 9월 22일 (월)"
        android:textAppearance="@style/TextAppearance.Mindlog.Subtitle"
        android:textColor="@color/text_primary"
        app:drawableEndCompat="@drawable/ic_calendar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_header_title"
        tools:ignore="HardcodedText" />

    <!-- 주간 캘린더 뷰 (HorizontalScrollView 또는 RecyclerView로 구현 필요) -->
    <HorizontalScrollView
        android:id="@+id/calendar_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_s"
        android:scrollbars="none"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_current_date">

        <!-- 이 내부는 동적으로 채워져야 합니다. 여기서는 예시로 LinearLayout을 사용합니다. -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="@dimen/screen_padding_h"
            android:paddingEnd="@dimen/screen_padding_h">
            <!-- 캘린더 아이템 예시 (실제로는 RecyclerView 아이템으로 만들어야 함) -->
            <TextView
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="월\n22"
                android:background="@drawable/bg_search_bar"
                android:textAppearance="@style/TextAppearance.Mindlog.Caption"
                android:textColor="@color/text_primary"/>
            <!-- 다른 날짜들... -->
        </LinearLayout>
    </HorizontalScrollView>


    <!-- ==================== 저널 리스트 ==================== -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_journal_list"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/space_s"
        android:clipToPadding="false"
        android:paddingBottom="@dimen/space_m"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/calendar_view"
        tools:listitem="@layout/item_journal_card"
        tools:itemCount="5"/>

    <!-- ==================== 빈 상태/에러 뷰 (기존과 동일) ==================== -->
    <!-- Group, TextView, Button 등은 기존 코드를 그대로 유지합니다. -->
    <androidx.constraintlayout.widget.Group
        android:id="@+id/group_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:constraint_referenced_ids="tv_empty_message"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tv_empty_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="작성된 기록이 없습니다.\n첫 기록을 남겨보세요."
        android:textAppearance="@style/TextAppearance.Mindlog.Body"
        android:textColor="@color/text_secondary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/calendar_view"
        app:layout_constraintVertical_bias="0.4"
        tools:ignore="HardcodedText" />

    <!-- 에러 상태 뷰 생략 (필요시 추가) -->

</androidx.constraintlayout.widget.ConstraintLayout>
