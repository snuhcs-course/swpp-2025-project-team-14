<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    tools:context=".features.settings.presentation.SettingsFragment">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:navigationIconTint="@color/text_primary"
        app:title="설정"
        app:titleCentered="true"
        app:titleTextColor="@color/text_primary"/>

    <!-- ✨ [순서 변경] 아이디 변경 버튼이 위로 이동 -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnChangeId"
        style="@style/Widget.Mindlog.SettingsButton"
        android:text="아이디 변경"
        app:icon="@drawable/ic_person"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ✨ [순서 변경] 비밀번호 변경 버튼이 아이디 변경 아래로 이동 -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnChangePassword"
        style="@style/Widget.Mindlog.SettingsButton"
        android:text="비밀번호 변경"
        app:icon="@drawable/ic_lock"
        app:layout_constraintTop_toBottomOf="@id/btnChangeId"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnLogout"
        style="@style/Widget.Mindlog.SettingsButton"
        android:layout_marginTop="24dp"
        android:text="로그아웃"
        app:icon="@drawable/ic_logout"
        app:layout_constraintTop_toBottomOf="@id/btnChangePassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
