<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_top_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="12dp"
    android:paddingBottom="8dp"
    android:background="@color/bg">

    <!-- 좌우 대칭을 위한 가이드라인 -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="395dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="395dp" />

    <!-- 1) 헤더: Mindlog + 우측 액션(검색/설정) -->
    <TextView
        android:id="@+id/tv_brand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MindLog"
        android:textColor="@color/text_primary"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/guideline_start"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- 설정과 검색 버튼을 horizontal chain으로 묶어 컴팩트하게 관리 -->
    <ImageButton
        android:id="@+id/btn_settings"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="설정"
        app:srcCompat="@drawable/ic_settings"
        app:tint="@color/text_primary"
        app:layout_constraintEnd_toEndOf="@id/guideline_end"
        app:layout_constraintTop_toTopOf="@id/tv_brand"
        app:layout_constraintBottom_toBottomOf="@id/tv_brand"/>

    <ImageButton
        android:id="@+id/btn_search"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="검색"
        app:srcCompat="@drawable/ic_search"
        app:tint="@color/text_primary"
        app:layout_constraintEnd_toStartOf="@id/btn_settings"
        app:layout_constraintTop_toTopOf="@id/btn_settings"
        app:layout_constraintBottom_toBottomOf="@id/btn_settings"/>

    <!-- 2) 날짜 표시 -->
    <TextView
        android:id="@+id/tv_today"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical"
        android:text="2025년 9월 22일 (월) "
        android:textColor="@color/text_primary"
        android:textSize="18sp"
        android:textStyle="bold"
        app:drawableEndCompat="@drawable/ic_calendar"
        app:drawablePadding="8dp"
        app:drawableTint="@color/text_secondary"
        app:layout_constraintStart_toStartOf="@id/guideline_start"
        app:layout_constraintTop_toBottomOf="@id/tv_brand"/>

    <!-- 3) 주간 캘린더 (ConstraintLayout Flow 사용) -->
    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/week_calendar_flow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:constraint_referenced_ids="day1,day2,day3,day4,day5,day6,day7"
        app:flow_horizontalStyle="spread_inside"
        app:flow_wrapMode="none"
        app:layout_constraintEnd_toEndOf="@id/guideline_end"
        app:layout_constraintStart_toStartOf="@id/guideline_start"
        app:layout_constraintTop_toBottomOf="@id/tv_today"/>

    <!-- 디자인 미리보기 전용 뷰들 -->
    <include layout="@layout/item_week_day" android:id="@+id/day1" tools:visibility="visible" />
    <include layout="@layout/item_week_day" android:id="@+id/day2" tools:visibility="visible" />
    <include layout="@layout/item_week_day" android:id="@+id/day3" tools:visibility="visible" />
    <include layout="@layout/item_week_day" android:id="@+id/day4" tools:visibility="visible" />
    <include layout="@layout/item_week_day" android:id="@+id/day5" tools:visibility="visible" />
    <include layout="@layout/item_week_day" android:id="@+id/day6" tools:visibility="visible" />
    <include layout="@layout/item_week_day" android:id="@+id/day7" tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>
