<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 1. 선택된 상태 (checked="true") -->
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <!-- 배경색 -->
            <solid android:color="#F0F0F0" />
            <!-- 테두리 (stroke) -->
            <stroke
                android:width="2dp"
                android:color="@color/text_primary" /> <!-- 선택 시 나타나는 검은색 테두리 -->
            <!-- 모서리 둥글기 -->
            <corners android:radius="12dp" />
        </shape>
    </item>

    <!-- 2. 선택되지 않은 기본 상태 (checked="false") -->
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <!-- 배경색 -->
            <solid android:color="@color/navigator" />
            <!-- 테두리 (기본 상태에서는 보이지 않도록) -->
            <stroke
                android:width="2dp"
                android:color="@android:color/transparent" /> <!-- 투명색 테두리 -->
            <!-- 모서리 둥글기 -->
            <corners android:radius="12dp" />
        </shape>
    </item>

</selector>
