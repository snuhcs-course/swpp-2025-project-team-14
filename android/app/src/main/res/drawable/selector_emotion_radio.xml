<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 버튼이 선택된 상태 (checked="true")일 때 보여줄 모양 -->
    <item android:state_checked="true" android:drawable="@drawable/shape_emotion_radio_checked" />
    <!-- 기본 상태 (선택되지 않았을 때)일 때 보여줄 모양 -->
    <item android:drawable="@drawable/shape_emotion_radio_unchecked" />
</selector>
