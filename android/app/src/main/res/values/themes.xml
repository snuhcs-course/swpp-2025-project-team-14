<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- 기본 앱 테마 -->
    <style name="Base.Theme.MindLog" parent="Theme.Material3.Light.NoActionBar">
        <!-- 앱 기본 색상 -->
        <item name="colorPrimary">#2C2C54</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorSecondary">#F2F0E9</item>
        <item name="colorOnSecondary">#666666</item>

        <!-- 배경 및 텍스트 -->
        <item name="android:windowBackground">#F8F6F0</item>
        <item name="android:textColor">#666666</item>

        <!-- 상태바 / 네비게이션바 색 -->
        <item name="android:statusBarColor">#2C2C54</item>
        <item name="android:navigationBarColor">#F2F0E9</item>
    </style>

    <!-- 실제 앱에서 사용할 테마 -->
    <style name="Theme.MindLog" parent="Base.Theme.MindLog" />

    <!-- ================= Text Styles ================= -->

    <!-- Title: 굵게, ~20sp, 줄간격 28–30 -->
    <style name="TextAppearance.Mindlog.Title" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorOnSurface</item> <!-- 기본 텍스트 색상 사용 예시 -->
        <!-- lineHeight(28sp) - textSize(20sp) = 8sp -->
        <item name="android:lineSpacingExtra">8sp</item>
    </style>

    <!-- Subtitle: ~16sp, 줄간격 22–24 -->
    <style name="TextAppearance.Mindlog.Subtitle" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/colorOnSurfaceVariant</item> <!-- 보조 텍스트 색상 사용 예시 -->
        <!-- lineHeight(24sp) - textSize(16sp) = 8sp -->
        <item name="android:lineSpacingExtra">8sp</item>
    </style>

    <!-- Body: ~14sp, 줄간격 20–22 -->
    <style name="TextAppearance.Mindlog.Body" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <!-- lineHeight(22sp) - textSize(14sp) = 8sp -->
        <item name="android:lineSpacingExtra">8sp</item>
    </style>

    <!-- Caption: ~12sp, 줄간격 16–18 -->
    <style name="TextAppearance.Mindlog.Caption" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
        <!-- lineHeight(18sp) - textSize(12sp) = 6sp -->
        <item name="android:lineSpacingExtra">6sp</item>
    </style>
</resources>